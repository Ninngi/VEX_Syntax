    <content><![CDATA[
float search_rad = ${1:10.0};
int   max_points = ${2:10};

int handle = pcopen(${3:0}, "P", P, search_rad, max_points);

vector near_p;

while( pciterate(handle) ) {
    pcimport(handle, "P", near_p);$3
}

pcclose(handle);
]]></content>
